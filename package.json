{
  "name": "tester",
  "version": "0.1.4",
  "description": "A man who test your code day and night without payment.",
  "author": "Firebox Technology",
  "hosts": {
    "editor-framework": "^0.3.15"
  },
  "main": "main.js",
  "menus": {
    "Developer/Tester": {
      "icon": "panel/icon.png",
      "accelerator": "CmdOrCtrl+Shift+T",
      "message": "tester:open"
    }
  },
  "panels": {
    "panel": {
      "frame": "panel/tester.html",
      "type": "dockable",
      "title": "Tester",
      "icon": "panel/icon.png",
      "width": 500,
      "height": 800,
      "min-width": 340,
      "min-height": 400,
      "shortcuts": {},
      "messages": [
        "tester:run-tests",
        "tester:runner-start",
        "tester:runner-end",
        "tester:runner-suite",
        "tester:runner-suite-end",
        "tester:runner-test",
        "tester:runner-pending",
        "tester:runner-pass",
        "tester:runner-fail",
        "tester:runner-test-end",
        "editor:dragstart",
        "editor:dragend"
      ]
    }
  },
  "tests": [
    "test/all-styles.html",
    "test/ghost-tester.html"
  ]
}